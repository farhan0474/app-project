<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu">

    <Button
        android:id="@+id/button_gpa"
        android:layout_width="241dp"
        android:layout_height="71dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="62dp"
        android:text="GPA Calculator"
        app:layout_constraintBottom_toTopOf="@+id/button_conversion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_conversion"
        android:layout_width="241dp"
        android:layout_height="71dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="264dp"
        android:text="Conversion Calculator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_gpa" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="184dp"
        android:layout_height="61dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="81dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_conversion"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>