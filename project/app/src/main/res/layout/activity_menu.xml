<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A1009688"
    tools:context=".menu">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="209dp"
        android:layout_height="41dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="21dp"
        android:fontFamily="@font/delius_swash_caps"
        android:text="Menu"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_addgrades"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_gpa"
        android:layout_width="241dp"
        android:layout_height="71dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="85dp"
        android:fontFamily="@font/autour_one"
        android:text="GPA Calculator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Button
        android:id="@+id/button_conversion"
        android:layout_width="241dp"
        android:layout_height="71dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="105dp"
        android:fontFamily="@font/autour_one"
        android:text="Conversion Calculator"
        app:layout_constraintBottom_toTopOf="@+id/button_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_gpa" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="184dp"
        android:layout_height="61dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="67dp"
        android:fontFamily="@font/autour_one"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_conversion" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="343dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/autour_one"
        android:text="Select the type of calculator"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

</androidx.constraintlayout.widget.ConstraintLayout>